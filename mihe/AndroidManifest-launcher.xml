<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <uses-sdk
    android:minSdkVersion="26"
    android:targetSdkVersion="33"
    tools:overrideLibrary="com.kieronquinn.app.smartspacer.sdk.client" />

  <!--
  Manifest entries specific to Launcher3. This is merged with AndroidManifest-common.xml.
  Refer comments around specific entries on how to extend individual components.
  -->
  <uses-permission android:name="com.android.permission.GET_INSTALLED_APPS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

  <application
    android:name="app.lawnchair.LawnchairApp"
    android:backupAgent="com.android.launcher3.LauncherBackupAgent"
    android:fullBackupContent="@xml/backupscheme"
    android:fullBackupOnly="true"
    android:hardwareAccelerated="true"
    android:icon="@mipmap/mihe_luancher"
    android:label="@string/derived_app_name"
    android:largeHeap="@bool/config_largeHeap"
    android:restoreAnyVersion="true"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:replace="android:icon">
      <meta-data
          android:name="com.google.android.gms.ads.APPLICATION_ID"
          android:value="@string/ad_id"/>
    <!--
    Main launcher activity. When extending only change the name, and keep all the
    attributes and intent filters the same
    -->
    <activity
      android:name="app.lawnchair.LawnchairLauncher"
      android:clearTaskOnLaunch="true"
      android:configChanges="keyboard|keyboardHidden|mcc|mnc|navigation|orientation|screenSize|screenLayout|smallestScreenSize"
      android:enabled="true"
      android:exported="true"
      android:launchMode="singleTask"
      android:resizeableActivity="true"
      android:resumeWhilePausing="true"
      android:screenOrientation="unspecified"
      android:stateNotNeeded="true"
      android:taskAffinity=""
      android:windowSoftInputMode="adjustPan">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <action android:name="android.intent.action.SHOW_WORK_APPS" />

        <category android:name="android.intent.category.HOME" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.MONKEY" />
        <category android:name="android.intent.category.LAUNCHER_APP" />
        <!--                <category android:name="android.intent.category.LAUNCHER" />-->
      </intent-filter>
      <meta-data
        android:name="com.android.launcher3.grid.control"
        android:value="${packageName}.grid_control" />
    </activity>

    <activity
      android:name="com.hello.mihe.app.launcher.ui.act.home.MiheMainActivity"
      android:theme="@style/mihe_default_theme"
      android:launchMode="singleTask"
      android:screenOrientation="portrait" />
    <activity
      android:name="com.hello.mihe.app.launcher.ui.act.web.WebviewAct"
      android:screenOrientation="portrait"
      android:theme="@style/mihe_default_theme" />
    <activity
      android:name="com.hello.mihe.app.launcher.ui.act.login.LoginActivity"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
      android:theme="@style/mihe_default_theme" />
      <activity
          android:excludeFromRecents="true"
          android:name="com.hello.mihe.app.launcher.ui.act.home.SwitchLauncherDialogActivity"
          android:taskAffinity="android.settings.HOME_SETTINGS"
          android:theme="@style/mihe_Transparent" />

      <activity
      android:name="com.hello.mihe.app.launcher.ui.act.hideapp.MiheHideAppActivity"
      android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan"
      android:theme="@style/mihe_default_theme" />
    <activity
      android:name="com.hello.mihe.app.launcher.ui.act.login.SplashAct"
      android:exported="true"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
      android:theme="@style/WelcomeTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="com.hello.mihe.app.launcher.ui.act.feedback.CollectProblemAct"
      android:screenOrientation="portrait"
      android:windowSoftInputMode="adjustResize"
      android:theme="@style/mihe_default_theme"
      />
      <activity
          android:name="com.immomo.autotracker.android.sdk.dialog.SchemeActivity"
          android:configChanges="orientation|screenSize"
          android:exported="true"
          android:theme="@style/mihe_default_theme"
          android:launchMode="singleTask">
          <intent-filter>
              <action android:name="android.intent.action.VIEW" />

              <category android:name="android.intent.category.BROWSABLE" />
              <category android:name="android.intent.category.DEFAULT" />

              <data
                  android:host="report.com"
                  android:scheme="vboxappoversea" />
          </intent-filter>
      </activity>
    <property
        android:name="android.adservices.AD_SERVICES_CONFIG"
        android:resource="@xml/ga_ad_services_config_replace"
        tools:replace="android:resource" />
  </application>
</manifest>
