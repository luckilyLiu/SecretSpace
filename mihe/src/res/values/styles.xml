<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="progress_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:backgroundDimAmount">0.6</item>
  </style>


  <style name="Theme.SandBox" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/app_theme_color</item>
    <item name="colorPrimaryVariant">@color/app_theme_color</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/app_theme_color</item>
    <item name="colorSecondaryVariant">@color/app_theme_color</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->

    <item name="actionMenuTextColor">#212121</item>

    <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:breakStrategy">simple</item>
  </style>

  <style name="WelcomeTheme" parent="Theme.SandBox">
    <item name="android:windowBackground">@drawable/mihe_splash</item>
  </style>
  <style name="mihe_default_theme" parent="Theme.SandBox">
    <item name="android:windowBackground">@color/app_theme_color</item>
  </style>
  <declare-styleable name="mihe_AspectRatioImageView">
    <attr name="mihe_ratio_width" format="float" />
    <attr name="mihe_ratio_height" format="float" />
  </declare-styleable>
  <declare-styleable name="SideBarView">
    <attr name="sidebarSelectTextColor" format="color|reference" />
    <attr name="sidebarUnSelectTextColor" format="color|reference" />
    <attr name="sidebarSelectTextSize" format="dimension" />
    <attr name="sidebarUnSelectTextSize" format="dimension" />

    <attr name="sidebarWordBackground" format="reference" />
    <attr name="sidebarWordTextColor" format="color|reference" />
    <attr name="sidebarWordTextSize" format="dimension" />

    <attr name="is_auto_play" format="boolean" />
    <attr name="scroll_time" format="integer" />

  </declare-styleable>
</resources>
