<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="57dp"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:orientation="vertical"
  android:paddingTop="10dp"
  android:paddingBottom="10dp"
  android:clipChildren="false"
  tools:background="@color/app_theme_color">

  <RelativeLayout

    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:layout_centerInParent="true"
      android:id="@+id/img_app"
      android:layout_width="51dp"
      android:layout_height="51dp" />

    <ImageView
      android:id="@+id/item_zfile_list_file_check_box"
      android:layout_width="17dp"
      android:layout_height="17dp"
      android:layout_marginRight="-2dp"
      android:layout_gravity="right|center_vertical"
      android:layout_alignRight="@+id/img_app"
      android:layout_alignBottom="@+id/img_app"
      android:src="@drawable/item_zfile_list_file_selector" />
  </RelativeLayout>

  <v.VText
    android:id="@+id/tv_item_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:alpha="0.5"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="#FFFFFF"
    android:textColor="#FFFFFF"
    android:textSize="12dp" />
</LinearLayout>